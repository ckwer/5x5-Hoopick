<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape >
            <solid android:color="#999999"/>
            <stroke android:width="1dp" android:color="#4b4c4c"/>
            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" android:topLeftRadius="8dp" android:topRightRadius="8dp"/>
        </shape>
    </item>


    <item android:state_pressed="false">
        <shape >
            <gradient android:angle="270" android:endColor="#999999" android:startColor="#e6e6e6"/>
            <stroke android:width="1dp" android:color="#4b4c4c"/>
            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" android:topLeftRadius="8dp" android:topRightRadius="8dp"/>
        </shape>
    </item>
</selector>