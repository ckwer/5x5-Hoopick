<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hoopick.hoopicktest.view.main.ActivityMain">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textVersion"
            android:layout_centerHorizontal="true"
            app:srcCompat="@mipmap/main1" />

        <TextView
            android:id="@+id/textVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="1.0.2"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/SettingsBtn"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="false"
            android:layout_marginBottom="13dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="SETTINGS"
            android:textColor="@android:color/background_light"
            tools:layout_editor_absoluteX="232dp"
            tools:layout_editor_absoluteY="8dp" />

        <Button
            android:id="@+id/LineUpBtn"
            android:layout_width="145dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/SettingsBtn"
            android:layout_alignTop="@+id/SettingsBtn"
            android:layout_centerHorizontal="false"
            android:background="@color/colorPrimary"
            android:text="LineUp"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/login_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/SettingsBtn"
            android:layout_alignStart="@+id/SettingsBtn"
            android:text="로그인" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
