<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#cc000000"
    android:gravity="center"
    app:layout_collapseParallaxMultiplier="1.0">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Hoopick"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="3point, 현주엽, assist : 김건모"
        android:textColor="#000000"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageButton
                android:id="@+id/button_shot_miss"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:background="@drawable/btn_fail_click"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/button_shot_made"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="165dp"
                android:layout_toRightOf="@+id/button_shot_miss"
                android:layout_weight="1"
                android:background="@drawable/btn_goal_click"
                android:visibility="visible" />

            <TextView
                android:id="@+id/text_shot_foul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="V"
                android:textSize="35sp"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/button_shot_foul"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="130dp"
                android:background="@drawable/btn_foul_click"
                android:visibility="visible"
                tools:visibility="visible" />
        </FrameLayout>

    </RelativeLayout>


</LinearLayout>