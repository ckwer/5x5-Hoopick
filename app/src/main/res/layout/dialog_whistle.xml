<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="#00000000"
              android:orientation="horizontal">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!-- menu_main -->
        <LinearLayout
            android:id="@+id/layout_main_menu"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="#f2f2f2"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Whistle"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_main_foul"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Foul"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/button_main_substitution"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Substitution"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/button_main_violation"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Violation"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/button_main_out_of_bound"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Out Of Bound"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/button_main_check"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Check"
                    android:textColor="#fff"
                    android:textSize="12sp" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <!-- menu_violation -->
    <LinearLayout
        android:id="@+id/layout_sub_violation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="#00000000"
        android:orientation="horizontal"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="14dp"
            android:layout_height="33dp"
            android:layout_marginTop="190dp"
            android:background="#00000000">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/right_arrow" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="#f2f2f2"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/text_title_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Violation"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_sub_violation_shock_clock"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Shot Clock"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/button_sub_violation_traveling"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Traveling"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/button_sub_violation_double_dribble"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Double Dribble"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/button_sub_violation_held_ball"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Held Ball"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/button_sub_violation_5s_post_up"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="5sec Post Up"
                    android:textColor="#fff"
                    android:textSize="12sp" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>






</LinearLayout>